h1,h2,h3,h4,h5,h6,div,a,p,li,input
  font-family "open-sans",sans-serif
  font-weight lighter

h1
  font-size 4em
  color $mainAccent
  line-height 1.1em
  text-align center

h2
  font-size 3em
  line-height 1.2em
  text-align center

h5
  font-size 1.2em
  font-weight normal !important

h4
  font-size 1.4em

input, #search-button
  font-size 1.6em

p,a
  font-size 1em

div
  font-size 1.1em
  line-height 1.3em

@media (max-width: 1000px)

  h1
   font-size 2.5em

  h2
    font-size 2em

  div
    font-size 1em
    line-height 1.2em
